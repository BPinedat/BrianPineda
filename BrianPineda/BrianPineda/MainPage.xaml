<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrianPineda.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Examen Brian Pineda" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="txtnombre" Placeholder="Ingrese Nombres" Keyboard="Text" />

        <Entry x:Name="txtapellido" Placeholder="Ingrese Apellido" Keyboard="Text" />

        <Entry x:Name="txtedad" Placeholder="Ingrese Edad" Keyboard="Text" />

        <Entry x:Name="txttelefono" Placeholder="Ingrese Telefono" Keyboard="Telephone" />

        <Picker Title="Seleccione Pais"
                x:Name="Pais">
            <Picker.Items>
                <x:String>Honduras</x:String>
                <x:String>Costa Rica</x:String>
                <x:String>Guatemala</x:String>
                <x:String>Salvador</x:String>
                <x:String>Panama</x:String>
                <x:String>Belice</x:String>
            </Picker.Items>
        </Picker>

        <Entry x:Name="txtnota" Placeholder="Ingrese nota" Keyboard="Text" />

        <Button x:Name="Btnsalvar" Text="Salvar" Clicked="Btnsalvar_Clicked"/>


    </StackLayout>

</ContentPage>
